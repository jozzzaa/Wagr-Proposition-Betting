<!DOCTYPE html>
<html>
  <head>
    <title>Wagr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= session[:user_id]%>
    <%= form_tag '/session', method:'delete' do %>
      <button>Logout</button>
    <% end %>
    <%= yield %>
  </body>
</html>
